.header-content
  margin-top 212px
  text-align center
  font 4.3em "Open Sans - Semibold"
  will-change opacity
  opacity .9
  &__discription
    text-align center
    margin 1.9em auto 0
    font-size 1.2em
  &__form
    padding 25px 40px
    width 372px
    height 388px
    box-shadow 0 0 57px rgba(20, 20, 21, 0.2)
    border-radius 2px
    background-color #ffffff
    display flex
    align-items center
    flex-direction column
    margin-top 110px
  &__form-legend
    font-size 1.3em
    margin-bottom 50px
  &__input
    padding 5px 0
    border 0
    border-bottom 1px solid text-color
    margin-bottom 25px
    width 100%
    &:focus
      border-color accent-color
  &__message
    padding-bottom 40px
    resize: none
  &__button
    width 238px
    height 55px
    box-shadow 2px 11px 20px rgba(20, 20, 21, 0.08)
    border-radius 27px
    border 1px solid rgba(1, 2, 2, 0.07)
    background-color accent-color
    color #ffffff
    cursor pointer
    font-size 1.3em
    &:hover
      background-color lighten(accent-color, 20%)
    &:after
      content "\f30b"
      font-family: "Font Awesome";
      width: 17px
      height: 10px
      margin-left 17px

